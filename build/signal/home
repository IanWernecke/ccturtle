-- build a home signal

-- buffer
move.up( 30 )

-- begin arrow down
turtle.placeDown()

-- second layer
for i=1,4 do
	turtle.place()
	turtle.turnRight()
end
turtle.up()
turtle.placeDown()

-- third layer
for i=1,4 do
	turtle.forward()
	turtle.place()
	turtle.back()
	turtle.place()
	turtle.turnRight()
end
turtle.up()
turtle.placeDown()

-- fourth and fifth layer
for i = 1,3 do
	turtle.up()
	turtle.placeDown()
end

-- begin house
-- sixth layer
for i=1,4 do
	turtle.place()
	turtle.turnRight()
end
turtle.up()
turtle.placeDown()

-- seventh layer
for i=1,4 do
	turtle.place()
	turtle.turnRight()
end
turtle.up()
turtle.placeDown()

-- eigth layer
for i=1,4 do
	turtle.forward()
	turtle.place()
	turtle.back()
	turtle.place()
	turtle.turnRight()
end
turtle.up()
turtle.placeDown()

-- ninth layer
for i=1,4 do
	turtle.place()
	turtle.turnRight()
end
turtle.up()
turtle.placeDown()

-- tip top
turtle.up()
turtle.placeDown()

-- move forward 3 and sink
for i=1,3 do
	turtle.forward()
end
move.seekDown()

