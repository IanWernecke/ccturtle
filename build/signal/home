#!/bin/lua

-- build a home signal

-- buffer
move.up(30)

-- begin arrow down
place.down()

-- second layer
for i=1,4 do
    place.forward()
    turtle.turnRight()
end
move.up()
place.down()

-- third layer
for i=1,4 do
    turtle.forward()
    place.forward()
    turtle.back()
    place.forward()
    turtle.turnRight()
end
move.up()
place.down()

-- fourth and fifth layer
for i = 1,3 do
    move.up()
    place.down()
end

-- begin house
-- sixth layer
for i=1,4 do
    place.forward()
    turtle.turnRight()
end
move.up()
place.down()

-- seventh layer
for i=1,4 do
    place.forward()
    turtle.turnRight()
end
move.up()
place.down()

-- eigth layer
for i=1,4 do
    move.forward()
    place.forward()
    move.back()
    place.forward()
    turtle.turnRight()
end
move.up()
place.down()

-- ninth layer
for i=1,4 do
    place.forward()
    turtle.turnRight()
end
move.up()
place.down()

-- tip top
move.up()
place.down()

-- move forward 3 and sink
for i=1,3 do
    turtle.forward()
end
seek.down()

